<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="53dp"
        android:text="用户名" />

    <EditText
        android:id="@+id/login_userNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="邮箱或用户名称"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_toRightOf="@+id/textView1"
        android:ems="10" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/login_passwordText"
        android:layout_alignLeft="@+id/textView1"
        android:text="密码" />

    <EditText
        android:id="@+id/login_passwordText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/login_userNameText"
        android:layout_below="@+id/login_userNameText"
        android:layout_marginTop="39dp"
        android:layout_toRightOf="@+id/textView1"
        android:inputType="textPassword" >

    </EditText>

    <Button
        android:id="@+id/registerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/login_passwordText"
        android:layout_centerVertical="true"
        android:layout_marginRight="26dp"
        android:text="注册" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/login_passwordText"
        android:layout_centerVertical="true"
        android:text="登陆" />

</RelativeLayout>
